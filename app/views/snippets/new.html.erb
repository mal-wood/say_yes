<h1>Write your inspiration:</h1>
<% if @errors %>
	<% @errors.each do |error| %>
		<%= error %>
	<%end%>
<%end%>

<%= form_for @snippet, url: user_snippets_path do |f| %>
<p>
  <%= f.label :body%>:
  <%= f.text_area :body %><br />
</p>
<%= f.hidden_field :user_id, :value => @user_id %>
  <%= f.label :author_name %>:
  <%= f.text_field :author_name %><br />
</p>
  <%= f.submit %>
<% end %>